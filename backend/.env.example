# Gemini API (via OpenAI-compatible endpoint)
GEMINI_API_KEY=your_gemini_api_key_here
BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/
MODEL_NAME=gemini-2.0-flash-exp

# Qdrant Cloud
QDRANT_URL=https://your-cluster.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=Physical_Robotics_Book

# Neon Postgres
NEON_DATABASE_URL=postgresql://user:password@your-neon-endpoint/dbname

# Application settings
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# CORS settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-username.github.io

# Chunking settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG settings
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.3

# JWT Authentication (generate secret with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7
